= simple_form_for(@page) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name_file
    = f.input :title
    = f.input :layout
    = f.input :permalink
    = f.input :published
    = f.input :categories
    = f.input :tags
    = f.input :content
    = f.input :date
    = f.association :site

  .form-actions
    = f.button :submit
